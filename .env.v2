# V2 Development Environment Configuration

# Application
NODE_ENV=development
PORT=3001
APP_VERSION=2.0.0-dev

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5433/crm_gtd_v2
REDIS_URL=redis://localhost:6380

# JWT Configuration (DEVELOPMENT ONLY!)
JWT_SECRET=super-bezpieczny-klucz-jwt-v2-min-32-znakow
JWT_REFRESH_SECRET=super-bezpieczny-refresh-klucz-v2-min-32-znakow
JWT_EXPIRES_IN=60m
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# Frontend Configuration
NEXT_PUBLIC_APP_URL=https://crm.dev.sorto.ai/crm2
NEXT_PUBLIC_API_URL=/crm2
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_APP_VERSION=2.0.0-dev

# Development Features
ENABLE_DEBUG_LOGGING=true
ENABLE_HOT_RELOAD=true
WATCHPACK_POLLING=true

# External Services
FAKTUROWNIA_ENVIRONMENT=sandbox
FAKTUROWNIA_API_KEY=your_api_key_here

# CORS Configuration (More permissive for development)
CORS_ORIGINS=https://crm.dev.sorto.ai,http://localhost:9026,http://localhost:3000

# Logging
LOG_LEVEL=debug
LOG_FORMAT=dev

# Security (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Development Tools
ENABLE_PRISMA_STUDIO=true
ENABLE_API_DOCS=true