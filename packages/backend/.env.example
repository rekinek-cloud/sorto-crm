# Example Environment Variables for CRM-GTD Backend

# Node Environment
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5434/crm_gtd_dev
REDIS_URL=redis://localhost:6379

# JWT Configuration (generate secure secrets in production)
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-min-32-chars
BCRYPT_ROUNDS=12

# Multi-tenancy
DEFAULT_ORG_LIMITS={"max_users": 10, "max_streams": 5}

# External Services
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
OPENAI_API_KEY=sk-your-openai-api-key

# Fakturownia Configuration
FAKTUROWNIA_DOMAIN=your-company.fakturownia.pl
FAKTUROWNIA_API_TOKEN=your_fakturownia_api_token_here
FAKTUROWNIA_ENVIRONMENT=production

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-app-password

# AWS Storage (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_BUCKET_NAME=your-s3-bucket
AWS_REGION=us-east-1

# Monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info

# Frontend URL
NEXT_PUBLIC_APP_URL=http://localhost:9025