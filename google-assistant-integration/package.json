{
  "name": "crm-gtd-google-assistant",
  "version": "1.0.0",
  "description": "Google Assistant integration for CRM-GTD-SMART application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "deploy:actions": "gactions deploy",
    "deploy:apps-script": "clasp push",
    "setup:gcloud": "gcloud auth application-default login",
    "setup:actions": "gactions init",
    "setup:clasp": "clasp login && clasp create --type standalone --title 'CRM-GTD Assistant Backend'"
  },
  "keywords": [
    "google-assistant",
    "voice-ai",
    "crm",
    "gtd",
    "smart-home",
    "nest-hub"
  ],
  "author": "CRM-GTD-SMART Team",
  "license": "MIT",
  "dependencies": {
    "@google-cloud/dialogflow": "^6.0.0",
    "@google-cloud/firestore": "^7.1.0",
    "@google-cloud/functions-framework": "^3.3.0",
    "@google/generative-ai": "^0.2.1",
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "googleapis": "^128.0.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "prisma": "^5.7.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.9.0",
    "@types/pg": "^8.10.7",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}