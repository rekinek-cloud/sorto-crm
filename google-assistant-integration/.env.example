# =================================
# GOOGLE ACTIONS CONFIGURATION
# =================================

# Google Cloud Project ID for Actions
GOOGLE_PROJECT_ID=your-google-project-id

# Google OAuth credentials
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Actions webhook verification
WEBHOOK_SECRET=your-webhook-secret-key

# Actions API credentials
ACTIONS_API_KEY=your-actions-api-key

# =================================
# CRM-GTD SMART API CONFIGURATION
# =================================

# CRM API Base URL
CRM_API_BASE_URL=http://localhost:3003/api/v1

# CRM API Authentication
CRM_API_KEY=your-crm-api-key
CRM_API_SECRET=your-crm-api-secret

# CRM Database Connection
CRM_DB_HOST=localhost
CRM_DB_PORT=5434
CRM_DB_NAME=crm_gtd_v1
CRM_DB_USER=user
CRM_DB_PASSWORD=password

# =================================
# APPLICATION CONFIGURATION
# =================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With

# =================================
# SECURITY CONFIGURATION
# =================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-256-bits-long
JWT_EXPIRY=24h
JWT_ISSUER=crm-gtd-smart-voice-api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=false

# Webhook Security
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_SIGNATURE_HEADER=google-actions-api-signature

# =================================
# DATABASE CONFIGURATION
# =================================

# PostgreSQL Connection
DB_HOST=localhost
DB_PORT=5434
DB_NAME=crm_gtd_v1
DB_USER=user
DB_PASSWORD=password
DB_SSL=false
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_TIMEOUT=30000

# Database Features
DB_ENABLE_LOGGING=true
DB_LOG_LEVEL=info

# =================================
# REDIS CONFIGURATION
# =================================

# Redis Connection
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis Options
REDIS_CONNECT_TIMEOUT=10000
REDIS_COMMAND_TIMEOUT=5000
REDIS_RETRY_DELAY=50
REDIS_MAX_RETRIES=3

# Cache Configuration
CACHE_TTL=3600
CACHE_PREFIX=voice_api:
CACHE_ENABLE=true

# =================================
# LOGGING CONFIGURATION
# =================================

# Log Levels: error, warn, info, verbose, debug, silly
LOG_LEVEL=info
LOG_FORMAT=json

# Log Files
LOG_FILE_ENABLE=true
LOG_FILE_PATH=./logs/voice-api.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Console Logging
LOG_CONSOLE_ENABLE=true
LOG_CONSOLE_COLOR=true

# =================================
# NLP CONFIGURATION
# =================================

# NLP Processing
NLP_CONFIDENCE_THRESHOLD=0.7
NLP_MAX_ENTITIES=10
NLP_FUZZY_THRESHOLD=0.3
NLP_LANGUAGE=pl-PL

# Entity Recognition
NLP_PERSON_NAME_CONFIDENCE=0.8
NLP_DATE_PARSING_ENABLED=true
NLP_CONTEXT_INFERENCE=true

# Task Analysis
NLP_PRIORITY_AUTO_DETECTION=true
NLP_TIME_ESTIMATION_ENABLED=true
NLP_TAG_EXTRACTION=true

# =================================
# PERFORMANCE CONFIGURATION
# =================================

# Request Processing
REQUEST_TIMEOUT=30000
REQUEST_MAX_SIZE=1mb
REQUEST_PAYLOAD_LIMIT=100kb

# Database Performance
DB_QUERY_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=5000
DB_IDLE_TIMEOUT=30000

# Memory Management
MEMORY_LIMIT=512mb
HEAP_SIZE_LIMIT=256mb

# =================================
# MONITORING CONFIGURATION
# =================================

# Health Checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_ENABLED=true

# Metrics Collection
METRICS_ENABLED=true
METRICS_INTERVAL=60000
METRICS_RETENTION=24h

# Performance Monitoring
PERF_MONITORING_ENABLED=true
PERF_SLOW_QUERY_THRESHOLD=1000
PERF_MEMORY_MONITORING=true

# =================================
# WEBHOOK CONFIGURATION
# =================================

# Webhook Processing
WEBHOOK_PROCESSING_TIMEOUT=5000
WEBHOOK_QUEUE_SIZE=1000
WEBHOOK_CONCURRENT_LIMIT=10

# Webhook Validation
WEBHOOK_VALIDATE_SIGNATURE=true
WEBHOOK_VALIDATE_PAYLOAD=true
WEBHOOK_VALIDATE_TIMESTAMP=true

# Webhook Retry Logic
WEBHOOK_RETRY_ENABLED=true
WEBHOOK_RETRY_MAX_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=1000
WEBHOOK_RETRY_BACKOFF=exponential

# =================================
# VOICE PROCESSING CONFIGURATION
# =================================

# Voice Recognition
VOICE_RECOGNITION_TIMEOUT=10000
VOICE_RECOGNITION_LANGUAGE=pl-PL
VOICE_RECOGNITION_FALLBACK=en-US

# Response Generation
VOICE_RESPONSE_MAX_LENGTH=1000
VOICE_RESPONSE_TIMEOUT=3000
VOICE_RESPONSE_CACHE=true

# Voice Session Management
VOICE_SESSION_TIMEOUT=300000
VOICE_SESSION_CLEANUP_INTERVAL=60000
VOICE_SESSION_MAX_INTERACTIONS=50

# =================================
# DEVELOPMENT CONFIGURATION
# =================================

# Development Features
DEV_AUTO_RELOAD=true
DEV_DEBUG_MODE=false
DEV_MOCK_RESPONSES=false
DEV_VERBOSE_LOGGING=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://user:password@localhost:5434/crm_gtd_test
TEST_REDIS_URL=redis://localhost:6379/1
TEST_TIMEOUT=30000

# Development Webhooks
DEV_WEBHOOK_URL=http://localhost:3000/webhook
DEV_NGROK_ENABLED=false
DEV_NGROK_TOKEN=your-ngrok-token

# =================================
# FEATURE FLAGS
# =================================

# Experimental Features
FEATURE_ADVANCED_NLP=true
FEATURE_VOICE_PERSONALIZATION=false
FEATURE_BATCH_OPERATIONS=false
FEATURE_SMART_SUGGESTIONS=true

# Beta Features
BETA_MULTI_LANGUAGE=false
BETA_VOICE_ANALYTICS=false
BETA_REAL_TIME_SYNC=true

# =================================
# EXTERNAL INTEGRATIONS
# =================================

# Google Calendar Integration
GOOGLE_CALENDAR_ENABLED=false
GOOGLE_CALENDAR_CLIENT_ID=your-calendar-client-id
GOOGLE_CALENDAR_CLIENT_SECRET=your-calendar-client-secret

# Slack Integration
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook
SLACK_CHANNEL=#voice-api-alerts

# Email Notifications
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password

# =================================
# ENVIRONMENT SPECIFIC OVERRIDES
# =================================

# Production overrides (when NODE_ENV=production)
# LOG_LEVEL=warn
# CACHE_TTL=7200
# RATE_LIMIT_MAX_REQUESTS=50
# WEBHOOK_VALIDATE_SIGNATURE=true

# Staging overrides (when NODE_ENV=staging)
# LOG_LEVEL=info
# DEV_DEBUG_MODE=true
# TEST_MODE=true

# Development overrides (when NODE_ENV=development)
# LOG_LEVEL=debug
# DEV_AUTO_RELOAD=true
# WEBHOOK_VALIDATE_SIGNATURE=false