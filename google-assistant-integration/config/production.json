{
  "name": "CRM-GTD Smart Google Assistant - Production",
  "environment": "production",
  "server": {
    "port": 3001,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": [
        "https://crm.dev.sorto.ai",
        "https://your-domain.com",
        "https://console.actions.google.com"
      ]
    },
    "compression": true,
    "requestTimeout": 30000,
    "keepAliveTimeout": 65000,
    "maxRequestSize": "1mb",
    "cluster": {
      "enabled": true,
      "workers": "auto"
    }
  },
  "database": {
    "url": "${DATABASE_URL}",
    "pool": {
      "min": 5,
      "max": 20
    },
    "logging": false,
    "ssl": {
      "enabled": true,
      "rejectUnauthorized": false
    },
    "migrations": {
      "autoRun": false,
      "directory": "./database/migrations"
    }
  },
  "google": {
    "projectId": "${GOOGLE_PROJECT_ID}",
    "oauth": {
      "clientId": "${GOOGLE_CLIENT_ID}",
      "clientSecret": "${GOOGLE_CLIENT_SECRET}",
      "redirectUri": "${GOOGLE_REDIRECT_URI}"
    },
    "actions": {
      "projectId": "${GOOGLE_ACTIONS_PROJECT_ID}",
      "webhookUrl": "https://your-domain.com/api/webhook/google-assistant"
    },
    "appsScript": {
      "deploymentId": "${GOOGLE_APPS_SCRIPT_DEPLOYMENT_ID}",
      "webAppUrl": "${GOOGLE_APPS_SCRIPT_WEB_APP_URL}"
    }
  },
  "crmApi": {
    "baseUrl": "${CRM_API_BASE_URL}",
    "timeout": 30000,
    "retries": 3,
    "auth": {
      "apiKey": "${CRM_API_KEY}",
      "secret": "${CRM_API_SECRET}"
    },
    "mock": false
  },
  "security": {
    "jwtSecret": "${JWT_SECRET}",
    "webhookSecret": "${WEBHOOK_SECRET}",
    "rateLimit": {
      "enabled": true,
      "requests": "${API_RATE_LIMIT_REQUESTS}",
      "windowMs": "${API_RATE_LIMIT_WINDOW_MS}"
    },
    "ssl": {
      "enabled": true,
      "certificatePath": "${SSL_CERT_PATH}",
      "keyPath": "${SSL_KEY_PATH}",
      "caPath": "${SSL_CA_PATH}"
    },
    "forceHttps": true
  },
  "logging": {
    "level": "${LOG_LEVEL}",
    "format": "${LOG_FORMAT}",
    "console": true,
    "file": {
      "enabled": true,
      "path": "${LOG_FILE_PATH}",
      "maxSize": "10MB",
      "maxFiles": 5
    },
    "errorTracking": {
      "enabled": true,
      "service": "sentry"
    }
  },
  "features": {
    "voiceCommands": "${FEATURE_VOICE_COMMANDS}",
    "nestHubDisplay": "${FEATURE_NEST_HUB_DISPLAY}",
    "weatherWidget": "${FEATURE_WEATHER_WIDGET}",
    "newsWidget": "${FEATURE_NEWS_WIDGET}",
    "calendarIntegration": "${FEATURE_CALENDAR_INTEGRATION}",
    "mockServices": false
  },
  "widgets": {
    "defaultRefreshInterval": "${WIDGET_REFRESH_INTERVAL_DEFAULT}",
    "weather": {
      "refreshInterval": "${WIDGET_REFRESH_INTERVAL_WEATHER}",
      "apiKey": "${WEATHER_API_KEY}",
      "apiUrl": "${WEATHER_API_URL}",
      "defaultLocation": {
        "latitude": "${DEFAULT_LATITUDE}",
        "longitude": "${DEFAULT_LONGITUDE}",
        "city": "${DEFAULT_CITY}"
      }
    },
    "news": {
      "refreshInterval": "${WIDGET_REFRESH_INTERVAL_NEWS}",
      "apiKey": "${NEWS_API_KEY}",
      "apiUrl": "${NEWS_API_URL}",
      "sources": ["business", "technology", "science"],
      "country": "pl",
      "language": "pl"
    }
  },
  "cache": {
    "enabled": true,
    "type": "redis",
    "redis": {
      "host": "${REDIS_HOST}",
      "port": "${REDIS_PORT}",
      "password": "${REDIS_PASSWORD}",
      "db": "${REDIS_DB}"
    },
    "ttl": {
      "default": "${CACHE_TTL_DEFAULT}",
      "weather": "${CACHE_TTL_WEATHER}",
      "news": "${CACHE_TTL_NEWS}"
    }
  },
  "monitoring": {
    "healthCheck": {
      "enabled": "${HEALTH_CHECK_ENABLED}",
      "interval": "${HEALTH_CHECK_INTERVAL}",
      "endpoints": [
        "/health",
        "/health/database",
        "/health/google-services"
      ]
    },
    "performance": {
      "enabled": "${PERFORMANCE_MONITORING}",
      "slowQueryThreshold": "${SLOW_QUERY_THRESHOLD}"
    },
    "metrics": {
      "enabled": true,
      "endpoint": "/metrics",
      "prometheus": true
    }
  },
  "voiceConfig": {
    "supportedLanguages": ["pl", "en"],
    "defaultLanguage": "${DEFAULT_LANGUAGE}",
    "responseSettings": {
      "speed": "${VOICE_SPEED_DEFAULT}",
      "confirmations": "${VOICE_CONFIRMATIONS_DEFAULT}",
      "maxResponseLength": 300
    },
    "session": {
      "timeoutMs": "${SESSION_TIMEOUT_MS}",
      "maxConcurrent": "${MAX_CONCURRENT_SESSIONS}"
    }
  },
  "nestHub": {
    "displayUrl": "${NEST_HUB_DISPLAY_URL}",
    "defaultTheme": "dark",
    "autoRefresh": true,
    "gridConfig": {
      "columns": 4,
      "rows": 3,
      "gap": 16
    },
    "security": {
      "allowedIPs": [],
      "requireAuth": false
    }
  },
  "backup": {
    "enabled": "${BACKUP_ENABLED}",
    "schedule": {
      "intervalHours": "${BACKUP_INTERVAL_HOURS}",
      "retentionDays": "${BACKUP_RETENTION_DAYS}"
    },
    "location": "${BACKUP_LOCATION}",
    "encryption": {
      "enabled": true,
      "algorithm": "aes-256-gcm"
    }
  },
  "optimization": {
    "compression": {
      "enabled": true,
      "threshold": 1024,
      "level": 6
    },
    "caching": {
      "staticFiles": true,
      "apiResponses": true
    },
    "minification": {
      "js": true,
      "css": true,
      "html": true
    }
  },
  "alerts": {
    "enabled": true,
    "channels": ["email", "slack"],
    "thresholds": {
      "errorRate": 0.05,
      "responseTime": 2000,
      "memoryUsage": 0.8,
      "cpuUsage": 0.8
    }
  }
}