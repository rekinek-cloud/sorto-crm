# CRM-GTD Smart - Google Assistant Integration
# Environment Configuration Template

# ================================
# Google Services Configuration
# ================================

# Google Cloud Project ID
GOOGLE_PROJECT_ID=crm-gtd-smart-assistant

# Google OAuth 2.0 Credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=https://your-domain.com/auth/google/callback

# Google Assistant Actions SDK
GOOGLE_ACTIONS_PROJECT_ID=crm-gtd-smart-assistant
GOOGLE_ACTIONS_SDK_KEY=your-actions-sdk-key

# Google Apps Script Configuration
GOOGLE_APPS_SCRIPT_DEPLOYMENT_ID=your-deployment-id
GOOGLE_APPS_SCRIPT_WEB_APP_URL=https://script.google.com/macros/s/your-script-id/exec

# ================================
# CRM-GTD Smart API Configuration
# ================================

# Main CRM API Base URL
CRM_API_BASE_URL=https://crm.dev.sorto.ai/crm/api/v1

# API Authentication
CRM_API_KEY=your-crm-api-key
CRM_API_SECRET=your-crm-api-secret

# ================================
# Security Configuration
# ================================

# JWT Secret for token signing
JWT_SECRET=your-very-long-and-secure-jwt-secret-key-here

# Webhook Secret for Google Assistant
WEBHOOK_SECRET=your-webhook-secret-key-minimum-32-characters-long

# API Rate Limiting
API_RATE_LIMIT_REQUESTS=60
API_RATE_LIMIT_WINDOW_MS=60000

# ================================
# Database Configuration
# ================================

# PostgreSQL Database
DATABASE_URL=postgresql://user:password@localhost:5434/crm_gtd_v1
DATABASE_HOST=localhost
DATABASE_PORT=5434
DATABASE_NAME=crm_gtd_v1
DATABASE_USER=user
DATABASE_PASSWORD=password

# Database Pool Configuration
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ================================
# Server Configuration
# ================================

# Server Port
PORT=3001

# Environment
NODE_ENV=production

# CORS Configuration
ALLOWED_ORIGINS=https://crm.dev.sorto.ai,https://your-domain.com,https://console.actions.google.com

# ================================
# Logging Configuration
# ================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Format (json, simple)
LOG_FORMAT=json

# Log File Path (optional)
LOG_FILE_PATH=/var/log/google-assistant-integration.log

# ================================
# Nest Hub Configuration
# ================================

# Nest Hub Display URL
NEST_HUB_DISPLAY_URL=https://your-domain.com/nest-display

# Widget Refresh Intervals (seconds)
WIDGET_REFRESH_INTERVAL_DEFAULT=300
WIDGET_REFRESH_INTERVAL_WEATHER=1800
WIDGET_REFRESH_INTERVAL_NEWS=900

# ================================
# External Services Configuration
# ================================

# Weather API (OpenWeatherMap)
WEATHER_API_KEY=your-openweathermap-api-key
WEATHER_API_URL=https://api.openweathermap.org/data/2.5

# News API
NEWS_API_KEY=your-news-api-key
NEWS_API_URL=https://newsapi.org/v2

# Default Location for Weather
DEFAULT_LATITUDE=52.2297
DEFAULT_LONGITUDE=21.0122
DEFAULT_CITY=Warsaw

# ================================
# Feature Flags
# ================================

# Enable/disable specific features
FEATURE_VOICE_COMMANDS=true
FEATURE_NEST_HUB_DISPLAY=true
FEATURE_WEATHER_WIDGET=true
FEATURE_NEWS_WIDGET=true
FEATURE_CALENDAR_INTEGRATION=true

# Debug Features
DEBUG_WEBHOOK_LOGGING=false
DEBUG_API_RESPONSES=false

# ================================
# Cache Configuration
# ================================

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# In-memory cache TTL (seconds)
CACHE_TTL_DEFAULT=300
CACHE_TTL_WEATHER=1800
CACHE_TTL_NEWS=900

# ================================
# Monitoring Configuration
# ================================

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30000

# Performance Monitoring
PERFORMANCE_MONITORING=true
SLOW_QUERY_THRESHOLD=1000

# ================================
# Google Assistant Specific
# ================================

# Supported Languages
SUPPORTED_LANGUAGES=pl,en

# Default Language
DEFAULT_LANGUAGE=pl

# Voice Response Configuration
VOICE_SPEED_DEFAULT=1.0
VOICE_CONFIRMATIONS_DEFAULT=true

# Session Configuration
SESSION_TIMEOUT_MS=1800000
MAX_CONCURRENT_SESSIONS=100

# ================================
# Backup and Recovery
# ================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/backups/google-assistant

# ================================
# SSL/TLS Configuration
# ================================

# SSL Certificate Paths (for HTTPS)
SSL_CERT_PATH=/path/to/certificate.crt
SSL_KEY_PATH=/path/to/private.key
SSL_CA_PATH=/path/to/ca-bundle.crt

# Force HTTPS
FORCE_HTTPS=true

# ================================
# Development Configuration
# ================================

# Development Mode
DEV_MODE=false

# Mock Services
MOCK_GOOGLE_SERVICES=false
MOCK_CRM_API=false
MOCK_WEATHER_API=false

# Test Configuration
TEST_DATABASE_URL=postgresql://user:password@localhost:5434/crm_gtd_test
TEST_GOOGLE_CLIENT_ID=test-client-id
TEST_WEBHOOK_SECRET=test-webhook-secret-for-testing-purposes

# ================================
# Production Optimizations
# ================================

# Compression
ENABLE_COMPRESSION=true

# Request Timeout (ms)
REQUEST_TIMEOUT=30000

# Keep Alive Timeout (ms)
KEEP_ALIVE_TIMEOUT=65000

# Max Request Size
MAX_REQUEST_SIZE=1mb

# Cluster Mode
CLUSTER_MODE=false
CLUSTER_WORKERS=auto