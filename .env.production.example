# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Database
POSTGRES_DB=crm_gtd_prod
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# ClickHouse
CLICKHOUSE_PASSWORD=your_clickhouse_password_here

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_min_32_chars_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars_here
BCRYPT_ROUNDS=12

# External URLs (replace with your domain)
# For subpath deployment use: http://your-ip/crm
NEXT_PUBLIC_API_URL=http://your-ip/crm
NEXT_PUBLIC_APP_URL=http://your-ip/crm
NEXT_PUBLIC_BASE_PATH=/crm

# OpenAI API (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Stripe (optional)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_or_app_password

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_BUCKET_NAME=your_s3_bucket_name
AWS_REGION=us-east-1

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info